<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Builder.ViewModel"
                    xmlns:local="clr-namespace:Builder.Resource">



    <DataTemplate x:Key="ConditionTemplate">
        <UniformGrid Columns="2">
            <ComboBox x:Name="SelectedConditionComboBox" ItemsSource="{Binding ConditionGroup.Conditions, Mode=OneTime}" DisplayMemberPath="DisplayName" 
                      SelectedItem="{Binding ConditionGroup.Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Margin="5"/>
            <TextBox Grid.Column="1" Margin="5" Text="{Binding ConditionGroup.Selected.Param1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.Style>
                    <Style>
                        <Setter Property="TextBox.Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=SelectedConditionComboBox, Path=SelectedItem.DisplayName}" Value="Contains">
                                <Setter Property="TextBox.Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </UniformGrid>
    </DataTemplate>


</ResourceDictionary>