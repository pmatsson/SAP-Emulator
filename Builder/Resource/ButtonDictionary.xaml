<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Builder.Resource">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Style/Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="btn_remove" TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" x:Shared="False">
        <Setter Property="Button.Visibility" Value="Visible" />
        <Setter Property="Content">
            <Setter.Value>
                <Path Data="{StaticResource ico_remove}" Stretch="Fill"  Fill="Red" Margin="2" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Button.IsEnabled" Value="False">
                <Setter Property="Button.Visibility" Value="Collapsed" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>